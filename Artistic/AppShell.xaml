<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Artistic.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Artistic"
    FlyoutBehavior="Flyout"
    FlyoutBackgroundColor="{StaticResource Primary}">


    <FlyoutItem Title="Explore"  Style="{StaticResource Flyout}">
        <Tab>
            <ShellContent Title="Explore" ContentTemplate="{DataTemplate local:BrowseItems}" Route="BrowseItems"/>
        </Tab>
    </FlyoutItem>

    <FlyoutItem Title="Options"  Style="{StaticResource Flyout}">
        <Tab>
            <ShellContent Title="Options" ContentTemplate="{DataTemplate local:Settings}" Route="Settings"/>
        </Tab>
    </FlyoutItem>
    
    <FlyoutItem Title="Logout"  Style="{StaticResource Flyout}">
        <Tab>
            <ShellContent Title="Logout" ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage"/>
        </Tab>
    </FlyoutItem>
    
</Shell>
