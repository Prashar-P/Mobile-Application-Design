<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Artistic.MainPage">

        <ContentPage.Content>

        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <StackLayout>
                <Label Style="{StaticResource Artistic}" Text="Artistic" />
            </StackLayout>

            <StackLayout>


                <Label Style="{StaticResource Login}"
                Text="Username:"/>

                <Entry Style="{StaticResource EntryLogin}" />

                <Label Style="{StaticResource Login}"
                Text="Password:"/>

                <Entry Style="{StaticResource EntryLogin}"/>

                <Button Clicked="LoginButton" Text="Login"></Button>
                <Button Clicked="RegisterButton" Text="Register"></Button>


            </StackLayout>

        </VerticalStackLayout>

    </ContentPage.Content>

</ContentPage>
